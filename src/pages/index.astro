---
import Base from "#layouts/Base.astro";
import HeroSection from "../components/homePage/HeroSection.astro";
import Principles from "../components/homePage/Principles.astro";
import Samples from "../components/homePage/Samples.svelte";
import Testimonials from "../components/homePage/Testimonials.astro";
import { getItemsFromCollection } from "../lib/content/getCollectionItems.ts";

const samples = await getItemsFromCollection("samples");
---

<Base title="Accueil">
  <section>
    <HeroSection />
  </section>

  <section>
    <h2 class="text-3xl bold" style="margin-block-end: var(--space-l);">
      Un magazine pour:
    </h2>
    <Samples client:idle tabs={samples} />
  </section>

  <section class="full-width">
    <Testimonials />
  </section>

  <section>
    <Principles />
  </section>
</Base>

<style>
  section {
    padding-block: var(--space-l);
  }
  @media (width > 60rem) {
    section {
      padding-block: var(--space-xl);
    }
  }
</style>
